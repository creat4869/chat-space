.message{"data-message-id": message.id}
  .upper-info
    %p.upper-info__user
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.body.present?
    %p.message__text
      = message.body
  = image_tag message.image.url if message.image.present?