.wrapper
  = render partial: 'groups/sidebar' 

  .chat-main
    .main-header
      .current-group
        %h2.current-group__name
          = @group.group_name
        %ul.member-list
          Member :
          %li.member-list__member
            = @user.pluck(:name).join(",")
      = link_to edit_group_path(@group) do
        .main-header__edit-btn
          Edit

    .messages
      = render partial: 'chat'

    .form
      %form.new-message
        .input-box
          %input{type: 'text', class: 'input-box__text', placeholder: "type a message"}
          %label.image-label
            %i.fa.fa-image
            %input{type: 'file', class: 'image-label__input'}
        %input{type: 'submit', class: 'new-message__submit-btn', value: "Send" }
